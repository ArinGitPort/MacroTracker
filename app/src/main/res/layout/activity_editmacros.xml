<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editmacrosLayout"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2C2C2C">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#464646"
                android:paddingVertical="36dp"
                android:layout_marginBottom="34dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTextView"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/cr14b2e2e2e"
                    android:text="Macro Editor"/>
            </LinearLayout>

            <!-- Calories Section -->
            <TextView
                android:id="@+id/caloriesLabel"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="11dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="CALORIES"/>

            <LinearLayout
                android:id="@+id/caloriesInputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/caloriesInput"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundcornerblack"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_marginBottom="30dp"
                    android:hint="Enter Calories"/>
            </LinearLayout>

            <!-- Macros Header -->
            <LinearLayout
                android:id="@+id/macrosHeaderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="77dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/macrosLabel"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="MACROS"/>

                <TextView
                    android:id="@+id/valuesLabel"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="VALUES"/>
            </LinearLayout>

            <!-- Macro Input Boxes (Protein, Carbs, Fats) -->
            <LinearLayout
                android:id="@+id/proteinContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/proteinLabelContainer"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/roundcornerblack"
                    android:paddingVertical="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/proteinLabel"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Protein"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/proteinInput"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundcornerblack"
                    android:gravity="center"
                    android:hint="0"
                    android:paddingVertical="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Carbs Section -->
            <LinearLayout
                android:id="@+id/carbsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/carbsLabelContainer"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/roundcornerblack"
                    android:paddingVertical="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/carbsLabel"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Carbs"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/carbsInput"
                    android:imeOptions="actionDone"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundcornerblack"
                    android:paddingVertical="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="0"/>
            </LinearLayout>

            <!-- Fats Section -->
            <LinearLayout
                android:id="@+id/fatsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fatsLabelContainer"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/roundcornerblack"
                    android:paddingVertical="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fatsLabel"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Fats"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/fatsInput"
                    android:imeOptions="actionDone"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundcornerblack"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:paddingVertical="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Save Button Container -->
            <LinearLayout
                android:id="@+id/saveButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                >

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="44dp"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/backButtonParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/backbutton_icon"
                    android:contentDescription="Back Button"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
