<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registerpageLayout"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollviewParent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2C2C2C"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/registerFormParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginlayout2"
                android:paddingTop="70dp"
                android:paddingBottom="149dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <!-- Username Label -->
                <TextView
                    android:id="@+id/usernameTextView"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="49dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Username" />

                <!-- Username Input -->
                <EditText
                    android:id="@+id/usernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="31dp"
                    android:layout_marginHorizontal="48dp"
                    android:background="@drawable/loginlayout1"
                    android:paddingHorizontal="12dp"
                    android:hint="Enter your username"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#BDBDBD"
                    android:textSize="14sp" />

                <!-- Email Label -->
                <TextView
                    android:id="@+id/emailTextView"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="49dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Email" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="31dp"
                    android:layout_marginHorizontal="48dp"
                    android:background="@drawable/loginlayout1"
                    android:paddingHorizontal="12dp"
                    android:hint="Enter your email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#BDBDBD"
                    android:textSize="14sp" />

                <!-- Password Label -->
                <TextView
                    android:id="@+id/passwordTextView"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginStart="45dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Password" />

                <!-- Password Input -->
                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="35dp"
                    android:layout_marginHorizontal="48dp"
                    android:background="@drawable/loginlayout1"
                    android:paddingHorizontal="12dp"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="#BDBDBD"
                    android:textSize="14sp" />

                <!-- Register Button -->
                <LinearLayout
                    android:id="@+id/registerButtonParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/registerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000000"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="46dp"
                        android:text="Register"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:stateListAnimator="@null" />
                </LinearLayout>

                <!-- Back Button (Icon Only) -->
                <LinearLayout
                    android:id="@+id/backButtonParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/backbutton_icon"
                        android:contentDescription="Back Button"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
