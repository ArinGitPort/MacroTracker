<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginpageLayout"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollviewParent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2C2C2C"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/loginformParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginlayout2"
                android:paddingTop="90dp"
                android:paddingBottom="169dp"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <!-- Email Label -->
                <TextView
                    android:id="@+id/emailTextView"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="49dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Email" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="31dp"
                    android:layout_marginHorizontal="48dp"
                    android:background="@drawable/loginlayout1"
                    android:paddingHorizontal="12dp"
                    android:hint="Enter your email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#BDBDBD"
                    android:textSize="14sp" />

                <!-- Password Label -->
                <TextView
                    android:id="@+id/passwordTextView"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginStart="45dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Password" />

                <!-- Password Input -->
                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="35dp"
                    android:layout_marginHorizontal="48dp"
                    android:background="@drawable/loginlayout1"
                    android:paddingHorizontal="12dp"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="#BDBDBD"
                    android:textSize="14sp" />

                <!-- Login Button -->
                <LinearLayout
                    android:id="@+id/loginButtonParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- Register Text -->
                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000000"
                        android:paddingHorizontal="46dp"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="Login"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/registerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account? Click this text to Register!"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
